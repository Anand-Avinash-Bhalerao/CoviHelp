<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".BluetoothConfirm">

    <TextView
        android:id="@+id/textView"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="Bluetooth"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="167dp"
        android:layout_height="95dp"
        android:textColor="@color/green"
        android:gravity="center"
        android:text="OFF"
        android:textSize="75sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.139" />

    <Button
        android:id="@+id/oOf"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Turn on"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/setngs"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/oOf" />

    <Button
        android:id="@+id/scanPage"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:onClick="openActivity1"
        android:text="Scan Page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/setngs" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="155dp"
        android:layout_height="52dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Press to enable or disable Bluetooth"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/oOf" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Go to Bluetooth Settings"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/setngs" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="155dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Go to Scan Page"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/scanPage" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="199dp"
        android:layout_height="199dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:srcCompat="@drawable/nbluetooth" />

</androidx.constraintlayout.widget.ConstraintLayout>